# MAC
if [[ "$OSTYPE" == "darwin"* ]]; then

  # export PYTHONPATH=`brew --prefix`/lib/python2.7/site-packages
  export GPG_BIN=/usr/local/opt/gnupg@1.4/libexec/gpgbin
  export NODE_PATH=/usr/local/opt/node@8
  export YARN_BIN_PATH=$HOME/.config/yarn/global/node_modules/.bin/bower
  export POSTGRES_PATH=/Applications/Postgres.app/Contents/Versions/9.6
  export POSTGRES_BIN_PATH=$POSTGRES_PATH/bin
  export POSTGRES_LIB_PATH=$POSTGRES_PATH/lib

  export PATH=$HOME/.bin:./bin:./.bundle/bin:${GPG_BIN}:/usr/local/bin:/usr/local/opt/coreutils/libexec/gnubin:/usr/local/opt/python/libexec/bin:${NODE_PATH}/bin:${YARN_BIN_PATH}:${POSTGRES_BIN_PATH}:${POSTGRES_LIB_PATH}:/usr/local/lib:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin:/opt/local/bin

  export MANPATH=/usr/local/opt/gnu-sed/libexec/gnuman:$MANPATH

fi

# LINUX
if [[ "$OSTYPE" == "linux-gnu" ]]; then

  export ANDROID_HOME=/opt/android-sdk-linux
  export NODEJS_BIN_PATH=/home/leandro/.asdf/installs/nodejs/8.11.1/.npm/bin

  export PATH=$HOME/.bin:./bin:./.bundle/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:${NODEJS_BIN_PATH}

fi
