[user]
  name  = Leandro Cesquini Pereira
  email = leandro.cesquini@gmail.com
[github]
  user = leandrocp
[core]
  editor = $EDITOR
  excludesfile = ~/.gitignore
  autocrlf = input
[merge]
  ff = only
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
[push]
  default = upstream
[branch]
	autosetuprebase = always
[branch "master"]
	rebase = true
[alias]
  aa = !git add --all && git status -sb
  au = !git add -u && git status -sb
  ca = commit --amend
  ci = commit -a
  co = checkout
  cl = clone
  st = status
  create-branch = !sh -c 'git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  delete-branch = !sh -c 'git push origin :refs/heads/$1 && git remote prune origin && git branch -D $1' -
  push-branch = !git push -u origin
  pull-request = !hub pull-request
  rebase-master = !git fetch origin && git rebase origin/master
  rebase-current = !git fetch origin && git rebase origin
  squash = rebase -i

