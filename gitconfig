[user]
  name  = Leandro Cesquini Pereira
  email = leandro.cesquini@gmail.com
[github]
  user = leandrocp
[core]
  editor = $EDITOR
  excludesfile = ~/.gitignore
  autocrlf = input
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
[push]
  default = upstream
[pull]
  rebase = true
[merge]
  summary = true
[branch]
	autosetuprebase = always
[branch "master"]
	rebase = true
[alias]
  aa = !git add --all && git status -sb
  au = !git add -u && git status -sb
  ca = commit --amend
  ci = commit -a
  co = checkout
  cl = clone
  st = status
  init-repo = checkout -b develop origin/develop
  create-branch = !sh -c 'git update-develop && git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  delete-branch = !sh -c 'git push origin :refs/heads/$1 && git remote prune origin && git branch -D $1' -
  update-branch = pull --rebase
  rebase-branch = pull --rebase origin develop
  update-develop = !sh -c 'git checkout develop && git update-branch' -
  list-branches = branch -a
  squash = rebase -i @{u}
  pull-request-branch = !sh -c 'hub pull-request -h origin:develop' -
  pull-request-issue = !sh -c 'hub pull-request -h origin:develop -i $1' - 
  pull-request-master = !sh -c 'git update-develop && hub pull-request -h origin:master' -

