[user]
  name  = Leandro Cesquini Pereira
  email = leandro.cesquini@gmail.com
[github]
  user = leandrocp
[core]
  editor = vim
  excludesfile = ~/.gitignore
  autocrlf = input
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
[push]
  default = upstream
[pull]
  rebase = true
[merge]
  summary = true
	tool = diffmerge
[branch]
	autosetuprebase = always
[branch "master"]
	rebase = true
[grep]
	extendRegexp = true
	lineNumber = true
[diff]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[mergetool "diffmerge"]
	cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustExitCode = true
[alias]
  aa = !git add --all && git status -sb
  au = !git add -u && git status -sb
  ca = commit --amend
  ci = commit -a
  co = checkout
  cl = clone
  st = status
  e = difftool -y
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  ll = log --graph --decorate --pretty=oneline --abbrev-commit --all
	g = grep --break --heading --line-number
  decrypt = !sh -c 'gitcrypt init && git reset --hard HEAD'
  create-develop-branch = !sh -c 'git push origin HEAD:refs/heads/develop && git fetch origin && git branch --track develop origin/develop && cd . && git checkout develop' -
  create-branch = !sh -c 'git update-develop && git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  delete-branch = !sh -c 'git push origin :refs/heads/$1 && git remote prune origin && git branch -D $1' -
  update-branch = pull --rebase
  rebase-branch = pull --rebase origin develop
  update-develop = !sh -c 'git checkout develop && git update-branch' -
  checkout-branch = !sh -c 'git fetch && git checkout -b $1 origin/$1' -
  list-branches = branch -a
  squash = rebase -i @{u}
  pull-request-branch = !sh -c 'hub pull-request -h origin:develop' -
  pull-request-issue = !sh -c 'hub pull-request -h origin:develop -i $1' -
  pull-request-master = !sh -c 'git update-develop && hub pull-request -h origin:master' -

