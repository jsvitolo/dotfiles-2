" Vimperator

let mapleader = ","

set runtimepath=~/.vimperator
set titlestring="Mozilla Firefox"
set visualbell
set autocomplete
set wildmode=list:longest,full
set complete=l
set tabnumbers
set incsearch
set hlsearch
set ignorecase
set smartcase

hi CompItem  font-size: 12px;
hi CompTitle color: magenta; font-weight: bold; font-size: 12px;

nnoremap j 2j
nnoremap k 2k
nnoremap h 2h
nnoremap l 2l

